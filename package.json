{
  "name": "nodejs-api-server-boilerplate",
  "version": "1.0.0",
  "description": "Minimal boilerplate for node.js API server",
  "main": "src/index.js",
  "scripts": {
    "start": "eslint src/** && babel-node src/index.js",
    "lint": "eslint src/** --fix",
    "test": "eslint tests/** && NODE_ENV=test mocha tests/**/*.test.js --require @babel/register --exit",
    "prod": "NODE_ENV=production babel-node src/index.js"
  },
  "repository": "https://github.com/6londe/nodejs-api-server-boilerplate",
  "author": "6londe@gmail.com",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status": "^1.5.0",
    "mongoose": ">=5.12.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.10",
    "@babel/register": "^7.13.8",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-utils": ">=2.1.0",
    "mocha": "^8.3.2"
  }
}
