{
  "name": "nodejs-api-server-boilerplate",
  "version": "1.0.0",
  "description": "Minimal boilerplate for node.js API server",
  "main": "src/index.js",
  "scripts": {
    "start": "eslint src/** && babel-node src/index.js",
    "lint": "eslint src/** --fix",
    "test": "eslint tests/** && NODE_ENV=test mocha tests/**/*.test.js --require @babel/register --exit",
    "prod": "NODE_ENV=production babel-node src/index.js"
  },
  "repository": "https://github.com/6londe/nodejs-api-server-boilerplate",
  "author": "6londe@gmail.com",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "http-status": "^1.5.0",
    "mongoose": ">=6.2.10",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.7",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-utils": ">=3.0.0",
    "mocha": "^9.2.2"
  }
}
