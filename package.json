{
  "name": "nodejs-api-server-minimal-boilerplate",
  "version": "1.0.0",
  "description": "Minimal boilerplate for node.js API server",
  "main": "src/index.js",
  "scripts": {
    "start": "eslint src/** && nodemon --exec babel-node src/index.js",
    "lint": "eslint src/** --fix",
    "test": "eslint tests/** && NODE_ENV=test nyc mocha tests/**/*.test.js --require @babel/register --exit"
  },
  "repository": "https://github.com/6londe/nodejs-api-server-minimal-boilerplate",
  "author": "6londe@gmail.com",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "mongoose": ">=5.9.9",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-utils": ">=2.0.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1"
  }
}
